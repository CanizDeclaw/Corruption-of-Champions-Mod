<Window x:Class="CoC_Desktop_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoC_Desktop_WPF"
        xmlns:views="clr-namespace:CoC_Desktop_WPF.Views"
        xmlns:vms="clr-namespace:CoC_Desktop_WPF.ViewModels"
        xmlns:scenes="clr-namespace:CoC_Desktop_WPF.ViewModels.Scenes"
        xmlns:coclib="clr-namespace:CoC_Lib;assembly=CoC_Lib"
        xmlns:cocscenes="clr-namespace:CoC_Lib.Scenes;assembly=CoC_Lib"
        mc:Ignorable="d"
        Title="Corruption of Champions" Height="800" Width="1200">
    <Window.DataContext>
        <vms:CoC/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type scenes:MainMenuVM}">
            <views:MainMenu/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type scenes:CommonSceneVM}">
            <views:CommonView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type scenes:CombatSceneVM}">
            <views:CombatView/>
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <!-- This is where the templating to control which view is visible will appear. -->
        <ContentControl Content="{Binding CurrentScene}"/>
    </DockPanel>
</Window>
