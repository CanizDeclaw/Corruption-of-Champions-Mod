<Window x:Class="CoC_Desktop_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoC_Desktop_WPF"
        xmlns:views="clr-namespace:CoC_Desktop_WPF.Views"
        xmlns:vms="clr-namespace:CoC_Desktop_WPF.ViewModels"
        xmlns:scenes="clr-namespace:CoC_Desktop_WPF.ViewModels.Scenes"
        mc:Ignorable="d"
        Title="Corruption of Champions"
        SizeToContent="WidthAndHeight" Loaded="Window_Loaded">
    <Window.DataContext>
        <vms:CoC/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter"/>
    </Window.Resources>
    <Grid Name="LayoutRoot" Width="{Binding ContentWidth}" Height="{Binding ContentHeight}" Background="Black">
        <!-- This is where the templating to control which view is visible will appear. -->
        <Viewbox Visibility="{Binding ScaleWithWindow, Converter={StaticResource VisibilityConverter}}">
            <views:CommonView/>
        </Viewbox>
        <views:CommonView Visibility="{Binding DoNotScaleWithWindow, Converter={StaticResource VisibilityConverter}}"/>
    </Grid>
</Window>
